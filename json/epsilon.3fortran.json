of a machine the hard way\n   real(kind=dp) :: t\n   real(kind=dp) :: my_dp_eps\n\n      ! starting with a value of 1, keep dividing the value\n      ! by 2 until no change is detected. Note that with\n      ! infinite precision this would be an infinite loop,\n      ! but floating point values in Fortran have a defined\n      ! and limited precision.\n      my_dp_eps = 1.0d0\n      SET_ST: do\n         my_dp_eps = my_dp_eps/2.0d0\n         t = 1.0d0 + my_dp_eps\n         if (t <= 1.0d0) exit\n      enddo SET_ST\n      my_dp_eps = 2.0d0*my_dp_eps\n\n   end function my_dp_eps\nend program demo_epsilon\n"]},{"t":"Para","c":[{"t":"Str","c":"Results:"}]},{"t":"CodeBlock","c":[["",["text"],[]],"  1.1920929E-07\n  1.1920929E-07\n  1.1920929E-07\n  2.220446049250313E-016\n F\n F\n T\n T\n  2.220446049250313E-016\n"]},{"t":"Header","c":[3,["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"Standard"}]}]]},{"t":"Para","c":[{"t":"Str","c":"Fortran"},{"t":"Space"},{"t":"Str","c":"95"}]},{"t":"Header","c":[3,["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"See"},{"t":"Space"},{"t":"Str","c":"Also"}]}]]},{"t":"Para","c":[{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"digits"}]},{"t":"Str","c":"(3)"}],["#digits",""]]},{"t":"Str","c":","},{"t":"SoftBreak"},{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"exponent"}]},{"t":"Str","c":"(3)"}],["#exponent",""]]},{"t":"Str","c":","},{"t":"SoftBreak"},{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"fraction"}]},{"t":"Str","c":"(3)"}],["#fraction",""]]},{"t":"Str","c":","},{"t":"SoftBreak"},{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"huge"}]},{"t":"Str","c":"(3)"}],["#huge",""]]},{"t":"Str","c":","},{"t":"SoftBreak"},{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"maxexponent"}]},{"t":"Str","c":"(3)"}],["#maxexponent",""]]},{"t":"Str","c":","},{"t":"SoftBreak"},{"t":"Link","c":[["",[],[]],[{"t":"Strong","c":[{"t":"Str","c":"minexponent"}]},{"t":"Str","c":"(3)"}]